{% extends "base.html.twig" %}

{% block title %}Modifier une catégorie{% endblock %}

{% block body %}
	{% include "modals/delete.html.twig" %}
	<div class="container-fluid">
		<div class="row">
		{% include "_partials/_adminnav.html.twig" %}
			<main class="col-md-9 p-2" style="max-width: 800px;">
				<h1 class="m-5">Modifier la catégorie</h1>
				{% include "admin/categories/_form.html.twig" with {'button_label': 'Modifier'} %}
				<div class="container"  style="max-width: 750px;">
					<a class="btn btn-outline-secondary me-5 ms-2" href="javascript:void(0)" onClick="history.back()">Annuler</a>
					<a class="btn btn-outline-danger delete-button" href="{{ path('admin_categories_delete', {id: category.id}) }}" data-id="{{ category.id }}">supprimer la catégorie</a>
				</div>
			</main>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/js/delete.js') }}"></script>
{% endblock %}
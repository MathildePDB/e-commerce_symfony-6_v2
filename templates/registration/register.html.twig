{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
	<div class="container-fluid" style="max-width: 800px;">
		<h1 class="m-5">Créer un compte</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="container" style="max-width: 750px;">
			<div class="d-flex mx-2 my-3">
				{{ form_widget(registrationForm.firstname) }}
				{{ form_widget(registrationForm.lastname) }}
			</div>
			<div class="mx-2 my-3">
				{{ form_widget(registrationForm.email) }}
			</div>
			<div class="mx-2 my-3">
				{{ form_widget(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
			</div>
			<div class="mx-2 my-3">
				{{ form_widget(registrationForm.address) }}
			</div>
			<div class="d-flex mx-2 my-3">
				{{ form_widget(registrationForm.zipcode) }}
				{{ form_widget(registrationForm.city) }}
			</div>
			<div class="d-flex align-items-center mx-2 my-3">
				{{ form_label(registrationForm.agreeTerms) }}
				{{ form_widget(registrationForm.agreeTerms) }}
			</div>
			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-outline-success m-2">S'inscrire</button>
			</div>
		</div>
		{{ form_end(registrationForm) }}
	</div>

{% endblock %}

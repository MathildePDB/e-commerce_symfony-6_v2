{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container-fluid" style="max-width: 800px;">
		<h1 class="m-5">Se connecter</h1>

		<form class="container" style="max-width: 750px;" method="post">
			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.firstname ~ ' ' ~ app.user.lastname }}
					<a class="btn btn-outline-secondary ms-2" href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}
			<div class="mx-2 my-3">
				<label class="form-label" for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" placeholder="email@exemple.com" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="mx-2 my-3">
				<label class="form-label" for="inputPassword">Mot de passe</label>
				<input type="password" name="password" placeholder="******" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-flex justify-content-between">
				<div>
					<a href="{{ path('forgotten_password') }}" class="btn btn-lg btn-outline-secondary mt-3">
						Mot de passe oublié
					</a>
					<a href="{{ path('app_register') }}" class="btn btn-lg btn-outline-secondary mt-3 ms-2">
						M'inscrire
					</a>
				</div>
				<button class="btn btn-lg btn-outline-success mt-3" type="submit">
					Me connecter
				</button>
			</div>
		</form>
	</div>


{% endblock %}
